{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "users": {
      ".read": "query.orderByChild === 'role' && query.equalTo === 'DOCTOR'",
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || root.child('users').child(auth.uid).child('role').val() === 'ADMIN')",
        ".write": "auth != null && (auth.uid === $uid || root.child('users').child(auth.uid).child('role').val() === 'ADMIN')"
      }
    },
    "appointments": {
      ".read": "auth != null",
      "$appointmentId": {
        ".write": "auth != null && (data.child('patientId').val() === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'DOCTOR' || root.child('users').child(auth.uid).child('role').val() === 'ADMIN')"
      }
    },
    "doctors": {
      ".read": true,
      "$doctorId": {
        ".write": "auth != null && (auth.uid === $doctorId || root.child('users').child(auth.uid).child('role').val() === 'ADMIN')"
      }
    },
    "availabilities": {
      ".read": true,
      "$doctorId": {
        ".write": "auth != null && (auth.uid === $doctorId || root.child('users').child(auth.uid).child('role').val() === 'ADMIN')",
        "$day": {
          ".write": "auth != null && (auth.uid === $doctorId || root.child('users').child(auth.uid).child('role').val() === 'ADMIN')"
        }
      }
    },
    "reviews": {
      ".read": true,
      "$reviewId": {
        ".write": "auth != null && (!data.exists() || data.child('patientId').val() === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'ADMIN')"
      }
    },
    "config": {
      "persistence": {
        ".read": true,
        ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'ADMIN'"
      }
    }
  }
}
